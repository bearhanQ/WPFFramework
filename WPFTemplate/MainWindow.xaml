<Window x:Class="WPFTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTemplate"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        mc:Ignorable="d"
        Width="300" Height="300"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <x:Array x:Key="nums" Type="{x:Type s:String}">
            <s:String>400</s:String>
            <s:String>300</s:String>
            <s:String>200</s:String>
            <s:String>100</s:String>
        </x:Array>
    </Window.Resources>
    <Grid Background="LightBlue">
        <local:CornerButton ButtonType="Link" Width="100" Height="30" Foreground="Red"
                            Icon="&#xe613;" Content="Show" VerticalContentAlignment="Center"
                            BorderBrush="Red" Click="Button_Click_1"/>
    </Grid>
</Window>
